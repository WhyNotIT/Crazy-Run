<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/home_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/status"
        android:textColor="#2962ff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <!-- sign-in button -->


    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_gravity="center_horizontal" />


    <ImageView
        android:id="@+id/photo_user"
        android:visibility="gone"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/achievements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#2962ff"
        android:textSize="18dp"
        android:text="Show my achievements"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:elevation="8dp"
        android:translationZ="8dp"
        android:layout_margin="3dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/palmares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#2962ff"
        android:textSize="18dp"
        android:text="Show scores leaderboard"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:elevation="8dp"
        android:translationZ="8dp"
        android:layout_margin="3dp"
        android:textStyle="bold" />

    <!-- sign-out button -->
    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#2962ff"
        android:textSize="18dp"
        android:text="Sign out"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:elevation="8dp"
        android:translationZ="8dp"
        android:layout_margin="3dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sounds"
            android:textColor="#2962ff"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Sounds"
            android:textColor="#2962ff"
            android:textSize="18dp"
            android:textStyle="bold"
            android:id="@+id/sounds"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a level:"
            android:textColor="#2962ff"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/level_choice"
            android:layout_gravity="center_horizontal"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unlock level for 10 Diamonds"
            android:textColor="#2962ff"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unlock!"
            android:textColor="#2962ff"
            android:textSize="18dp"
            android:textStyle="bold"
            android:id="@+id/unlock_level"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>


</LinearLayout>